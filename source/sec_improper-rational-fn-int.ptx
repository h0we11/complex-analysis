      <statement>
        <p>
          <m>\int_{-\infty}^{\infty}\frac{x^2}{(x^2+16)^2}\,dx</m>.
        </p>
      </statement>
      <solution>
        <p>
          <m>\frac{\pi}{8}</m>.
        </p>
      </solution>
    </exercise>
    <exercise xml:id="x8_3_2">
